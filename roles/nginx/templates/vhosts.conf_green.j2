server {
    listen 80;

    server_name dotstamp.com;

    charset utf-8;
    index index.html index.htm;

    access_log /var/log/nginx/access.log main;
    error_log /var/log/nginx/error.log error;

    location /static/ {
        #access_log off;
        expires 1d;
        gzip_static always;
        gunzip on;

        root "/project/green/dotstamp_deploy";
    }

    location /sound/make/ {
        fastcgi_read_timeout 180;

        try_files /_not_exists_ @backend;
    }

    location / {
        try_files /_not_exists_ @backend;
    }

    location @backend {
        proxy_pass http://127.0.0.1:{{env_server_green_port}};
    }
}
